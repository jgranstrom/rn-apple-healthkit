{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "es6",
    "outDir": "lib",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
